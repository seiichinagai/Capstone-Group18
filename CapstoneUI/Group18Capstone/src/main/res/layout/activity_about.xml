<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD49F"
    tools:context=".AboutActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="253dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/raleway"
        android:text="About"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Description"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="54dp"
        android:fontFamily="@font/raleway"
        android:gravity="left"
        android:text="Flite pairs soothing visuals and sounds to create a relaxed and detached mental state.\nWith this app, we hope to lower the risk of dependency on narcortics for pediatric patients."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/Authors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header" />

    <TextView
        android:id="@+id/Authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="33dp"
        android:fontFamily="@font/raleway"
        android:text="Created by"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/AuthorsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Description" />

    <TextView
        android:id="@+id/AuthorsText"
        android:layout_width="242dp"
        android:layout_height="68dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="19dp"
        android:fontFamily="@font/raleway"
        android:gravity="left"
        android:text="Seiichi Nagai, Nergal Givarkes, Nolan Miller, Samuel Wells, and Brian Nicolas"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/For"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Authors"
        app:layout_constraintTop_toBottomOf="@+id/Authors" />

    <TextView
        android:id="@+id/For"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        android:fontFamily="@font/raleway"
        android:gravity="left"
        android:text="For the Phoenix Children's Hospital"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AuthorsText" />


</android.support.constraint.ConstraintLayout>